@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent

<root>
	@if (DesignController.Instance.CarMode == DesignController.ModeOfCar.Design)
	{
		<DesignRoot />
	}
</root>

@code
{
	/// <summary>
	/// the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
	/// </summary>
	protected override int BuildHash() => System.HashCode.Combine(DesignController.Instance.CarMode);
}
